                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                <br />
                @Html.ActionLink("Create Venue", "CreateVenue", "Promoter", new { id = item.Id }, null)
                <br />
                @Html.ActionLink("Add Entertainment", "CreateEntertainment", "Promoter", new { id = item.Id }, null)
