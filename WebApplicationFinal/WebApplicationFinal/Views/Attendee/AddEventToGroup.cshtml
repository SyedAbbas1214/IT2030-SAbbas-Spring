@model EventPlanner.Models.AddEventToGroupViewModel
@{
    ViewBag.Title = "AddEventToGroup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Event To @Model.Group.Name</h2>

<h2>Please select an event.</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>UserToGroup</h4>
        <hr />
        @Html.HiddenFor(m => m.Group.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Events, "Events", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.Event.Id, Model.Events, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Event, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add Event" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Groups", "Details")
</div>